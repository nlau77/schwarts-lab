<% if current_user.admin? %>

<h1 class="">Schwartz Lab Maintenance Page</h1>
<h3><%= link_to "Home", root_path%></h3>
<h3><%= link_to 'Add/Delete Profile', new_profile_path %></h3>
<h3><%= link_to "Add/Delete Past Member", new_pastmember_path%><span></h3>
<h3><%= link_to "Add/Delete News Item", new_newstuff_path%><span></h3>

<div class="rows">
  <div class="columns small-6">
    <h2>Upload a file</h2>
    <div class=""style="background-color:#FFF; border:dashed 2px black;">
      <%= form_for @labmethod, url: {controller: "labmethods", action: "create"} do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.select :methodtype, ['biological', 'philosophy', 'programming']%>

      <%= f.file_field :pdf_file %>

      <%= f.submit "Add new pdf" %>
      <% end %>
    </div>
  </div>

  <div class="columns small-6">
    <h2>Delete a file</h2>
    <div class=""style="background-color:#FFF; border:dashed 2px black;">
      <ol>
      <% @labmethods.each do |labmethod| %>

          <li><%=labmethod.title %> <%= link_to "[x]", labmethod, method: :delete, data: {confirm: "Are you sure you want to delete this method?"} %></li>
      <% end %>
      </ol>
    </div>
  </div>
</div>

<!-- <h2>========</h2> -->
<div class ="columns small-6 column-centered">

</div>

<% else %>
  <% redirect_to static_pages_index %>
<% end %>
