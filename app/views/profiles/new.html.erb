<h2>Add a profile </h2>

<div class="rows">
  <div class="columns small-6">
    <%= form_for @profile do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <% end %>
  </div>
</div>
