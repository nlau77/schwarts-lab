<% if current_user.admin %>

<h1 class="">Schwartz Lab Maintenance Page</h1>
<h3><%= link_to "Home", root_path%></h3>
<h3><%= link_to "Add/Delete Methods", maintenance_index_path%></h3>


<div class="rows">
  <div class="columns small-6">
    <h2>Add a profile </h2>
    <div class="" style="background-color:#FFF; border:dashed 2px black;">
      <%= form_for @profile do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :profile_image %>
      <%= f.file_field :profile_image %>

      <%= f.submit "Add New Profile" %>
      <% end %>
    </div>
  </div>

  <h2>Delete profile </h2>
  <div class="columns small-6">
    <div class="" style="background-color:#FFF; border:dashed 2px black;">
      <ol>
        <% @profiles.each do |profile| %>
        <li><%=profile.name %> <%= link_to "[x]", profile, method: :delete, data: {confirm: "Are you sure you want to delete #{profile.name}'s profile?"} %></li>
        <% end %>
      </ol>
    <div>
  </div>
</div>

<% else %>
<% redirect_to static_pages_index %>
<% end %>
